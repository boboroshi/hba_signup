<h1>Sign Up for the Honor By August List</h1>

<%= error_messages_for :signup %>

<% form_for(@signup) do |f| %>
  <p><label for="firstname">First Name</label><br />
	<%= f.text_field :firstname %></p>
	<p><label for="lastname">Last Name</label><br />
		<%= f.text_field :lastname %></p>
	<p><label for="email">Email</label><br />
		<%= f.text_field :email %></p>
	<p><label for="email_confirmation">Confirm Email</label><br />
		<%= f.text_field :email_confirmation %></p>
	<p><label for="zip">Zip Code</label><br />
		<%= f.text_field :zip, :size => 10 %></p>
	<p><label for="cell">Cell Phone</label><br />
		<%= f.text_field :zip, :size => 15 %></p>
	
  <p class="center">
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', signups_path %>
